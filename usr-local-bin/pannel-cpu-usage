#!/usr/bin/bash
xdotool search --name htop
if [ $? -ne 1 ]; then
	pkill -f "htop"
	exit 1
fi

# xdotool search --name pulsemixer
# if [ $? -ne 1 ]; then
# 	pkill -f "pulsemixer"
# fi

alacritty --config-file=$HOME/.config/alacritty/popup.toml --title htop -e "htop" &

# wait for the application to start and be visable and then get window id
err=1
winid=0
while [ $err -eq 1 ]; do
	winid=$(xdotool search --name htop)
	err=$?
done

padding=15
y=28
h=580
xdotool windowsize $winid 602 $h
xdotool windowmove $winid 1306 $y
